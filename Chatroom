<body>
  <div class="shell">
    <div class="header">
      <div class="avatar"></div>
      <div class="header-text">
        <div class="header-title">VOICE MESSAGES</div>
        <div class="header-sub">Local chat â€¢ Stored on this device</div>
      </div>
    </div>

    <div id="chat" class="chat"></div>

    <div class="footer">
      <button id="recordBtn" class="record-btn">Hold to Record</button>
      <div class="status">
        <div id="statusText">Idle</div>
        <div id="timer" class="timer">00:00</div>
      </div>
    </div>
  </div>

  <script>
    const recordBtn = document.getElementById("recordBtn");
    const statusText = document.getElementById("statusText");
    const timerEl = document.getElementById("timer");
    const chatEl = document.getElementById("chat");

    let mediaRecorder = null;
    let chunks = [];
    let isRecording = false;
    let timerInterval = null;
    let startTime = 0;

    const STORAGE_KEY = "galaxia_voice_messages_v1";

    function formatTime(ms) {
      const totalSec = Math.floor(ms / 1000);
      const m = String(Math.floor(totalSec / 60)).padStart(2, "0");
      const s = String(totalSec % 60).padStart(2, "0");
      return `${m}:${s}`;
    }

    function startTimer() {
      startTime = Date.now();
      timerInterval = setInterval(() => {
        const elapsed = Date.now() - startTime;
        timerEl.textContent = formatTime(elapsed);
      }, 200);
    }

    function stopTimer() {
      clearInterval(timerInterval);
      timerInterval = null;
    }

    function saveMessage(blob, durationMs) {
      const reader = new FileReader();
      reader.onloadend = () => {
        const base64 = reader.result;
        const existing = JSON.parse(localStorage.getItem(STORAGE_KEY) || "[]");
        existing.push({
          id: Date.now(),
          createdAt: new Date().toISOString(),
          durationMs,
          data: base64
        });
        localStorage.setItem(STORAGE_KEY, JSON.stringify(existing));
        renderMessages();
      };
      reader.readAsDataURL(blob);
    }

    function renderMessages() {
      const messages = JSON.parse(localStorage.getItem(STORAGE_KEY) || "[]");
      chatEl.innerHTML = "";
      messages.forEach(msg => {
        const bubble = document.createElement("div");
        bubble.className = "bubble me";

        const audio = document.createElement("audio");
        audio.src = msg.data;
        audio.preload = "metadata";

        const controlsRow = document.createElement("div");
        const playBtn = document.createElement("button");
        playBtn.textContent = "Play";
        playBtn.onclick = () => audio.play();
        controlsRow.appendChild(playBtn);

        const meta = document.createElement("div");
        meta.className = "meta";
        const duration = document.createElement("span");
        duration.textContent = "Length: " + formatTime(msg.durationMs);
        const time = document.createElement("span");
        const date = new Date(msg.createdAt);
        time.textContent = date.toLocaleTimeString();
        meta.appendChild(duration);
        meta.appendChild(time);

        bubble.appendChild(controlsRow);
        bubble.appendChild(meta);
        chatEl.appendChild(bubble);
      });

      chatEl.scrollTop = chatEl.scrollHeight;
    }

    async function initMedia() {
      if (mediaRecorder) return;
      const stream = await navigator.mediaDevices.getUserMedia({ audio: true });
      mediaRecorder = new MediaRecorder(stream);

      mediaRecorder.ondataavailable = e => {
        chunks.push(e.data);
      };

      mediaRecorder.onstop = () => {
        const blob = new Blob(chunks, { type: "audio/webm" });
        chunks = [];
        const durationMs = Date.now() - startTime;
        if (durationMs > 500) {
          saveMessage(blob, durationMs);
        }
      };
    }

    recordBtn.addEventListener("mousedown", async () => {
      try {
        await initMedia();
        if (!mediaRecorder) return;

        isRecording = true;
        statusText.textContent = "Recording...";
        recordBtn.classList.add("recording");
        timerEl.textContent = "00:00";
        startTimer();
        mediaRecorder.start();
      } catch (err) {
        console.error(err);
        statusText.textContent = "Mic blocked";
      }
    });

    recordBtn.addEventListener("mouseup", () => {
      if (!isRecording || !mediaRecorder) return;
      isRecording = false;
      statusText.textContent = "Saved";
      recordBtn.classList.remove("recording");
      stopTimer();
      mediaRecorder.stop();
      setTimeout(() => {
        statusText.textContent = "Idle";
      }, 800);
    });

    recordBtn.addEventListener("mouseleave", () => {
      if (isRecording && mediaRecorder && mediaRecorder.state === "recording") {
        isRecording = false;
        statusText.textContent = "Cancelled";
        recordBtn.classList.remove("recording");
        stopTimer();
        mediaRecorder.stop();
        chunks = [];
        setTimeout(() => {
          statusText.textContent = "Idle";
        }, 800);
      }
    });

    renderMessages();
  </script>
</body>
</html>
