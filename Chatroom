      background: radial-gradient(circle at top, rgba(0,255,255,0.3), rgba(0,0,0,0.95));
      color: #e6ffff;
      font-size: 13px;
      letter-spacing: 0.08em;
      text-transform: uppercase;
      cursor: pointer;
      transition: 0.15s;
      box-shadow: 0 0 16px rgba(0,255,255,0.4);
    }

    .record-btn.recording {
      border-color: rgba(255,80,80,0.9);
      background: radial-gradient(circle at top, rgba(255,80,80,0.4), rgba(0,0,0,0.95));
      box-shadow: 0 0 18px rgba(255,80,80,0.8);
